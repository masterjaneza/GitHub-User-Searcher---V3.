# Prioritize JavaScript (and React-style JSX)
*.js linguist-detectable=true
*.jsx linguist-detectable=true

# Allow CSS, but ignore dist/vendor files that may skew results
dist/**/*.css linguist-generated
vendor/**/*.css linguist-vendored

# Include HTML and JSON (optional but nice for web projects)
*.html linguist-detectable=true
*.json linguist-detectable=true
